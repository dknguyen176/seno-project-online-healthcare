<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_margin="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/doc_name"
        app:cardCornerRadius="15dp">

        <ImageView
            android:id="@+id/doc_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/milk" />

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/doc_favorite"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icons8_favorite_64"
        app:layout_constraintEnd_toEndOf="@+id/doc_spec"
        app:layout_constraintTop_toTopOf="@id/doc_spec"
        app:layout_constraintBottom_toBottomOf="@id/doc_spec"
        app:layout_constraintVertical_bias="1"/>


    <TextView
        android:id="@+id/doc_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/overlock_black"
        android:text="Dr. Doctor Name"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"/>


    <TextView
        android:id="@+id/doc_spec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/overlock_black"
        android:text="Therapist"
        android:textAlignment="center"
        android:textColor="@color/pink"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/doc_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/doc_exper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/overlock_black"
        android:text="4.0"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/doc_spec"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/doc_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/overlock_black"
        android:text="7 years"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/doc_exper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>