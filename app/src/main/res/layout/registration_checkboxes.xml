<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/reg_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Who are you?"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/ckbox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toBottomOf="@id/reg_text"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/ckbox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doctor"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toBottomOf="@id/reg_text"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/reg_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintTop_toBottomOf="@id/ckbox1"
        android:visibility="invisible"
        android:text="Note: This information can be changed later"/>

</androidx.constraintlayout.widget.ConstraintLayout>